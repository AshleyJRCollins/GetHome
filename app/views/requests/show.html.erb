<div class="acontainertwo">

<h1>Journey details</h1>
<br>

<h3>Time of journey home: 35 minutes</h3>

<% if @request.user == current_user %>
<%= "" %>
<% else %>
<h3>Time to pickup: 3 minutes</h3>
<%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", id: "aavatar" %>
<h3>Name of passenger: <%= @request.user.first_name %> <%= @request.user.last_name %></h3>
<h3>Car: <%= @request.user.car %></h3>
<h3>Telephone number: <%= @request.user.phone_number %></h3>
<% end %>
<br>
<p>Pick up location: <%= @request.starting_location %></p>
<p>Drop-off location: <%= @request.ending_location %></p>

<div id="map"
     style="width: 100%; height: 400px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

<div class="align-self-center" id="accept" data-request-id="<%= @request.id %>">
  <% if @request.user == current_user %>

    <%# if @request.pending? %>

      <%= link_to "Cancel booking",
              request_path(@request),
              method: :delete,
              data: { confirm: "Are you sure?" }, class: "btn btn-primary btn-lg" %>

    <%# elsif @request.confirmed? %>

    <%# end %>

  <% else %>

      <%= link_to "Accept", request_rides_path(@request), method: "post", class: "btn btn-primary btn-lg btn-block" %>

  <% end %>
</div>

<div class="align-self-center">
  <%= link_to "Back", requests_path, class: "btn btn-primary btn-lg" %>
</div>
</div>
